@model KursKayit
 @{
    ViewData["Title"] = "Create KursKayit";
}
<form asp-controller="KursKayit" asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label"></label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler"></select>
    </div>
    <div class="mb-3">
        <label asp-for="KursId" class="form-label"></label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar"></select>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>