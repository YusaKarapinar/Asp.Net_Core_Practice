@model IEnumerable<Kurs>
    @{
    ViewData["Title"] = "Home Page";
    }
    <a asp-controller="Kurs" asp-action="Create" class="btn btn-sm btn-primary">Create</a>

    <table class="table">
        
        

        <thead>
             <tr>
                <th>@Html.DisplayNameFor(m=>m.Baslik)</th>
                <th>@Html.DisplayNameFor(m=>m.KursId)</th>
                
                <th></th>

            </tr>
        </thead>
        <tbody>
            
                @foreach (var item in Model)
                {
            <tr>
                <td>@Html.DisplayFor(ModelItem=>item.Baslik)</td>
                <td>@Html.DisplayFor(ModelItem=>item.KursId)</td>
              
                <td><a asp-controller="Kurs" asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-controller="Kurs" asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
                }
            
        </tbody>
    </div>